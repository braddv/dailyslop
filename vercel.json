{
  "rewrites": [
    {
      "source": "/api/submit-score",
      "destination": "/api/submit-score.js"
    },
    {
      "source": "/slop",
      "destination": "/slop.html"
    }
  ],
  "headers": [
    {
      "source": "/dailyslop.mp4",
      "headers": [
        { "key": "Content-Type", "value": "video/mp4" }
      ]
    }
  ],
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ]
}
