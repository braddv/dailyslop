{
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "index.html"
    },
    {
        "source": "/slop",
        "destination": "slop.html"
    }
  ],
  "headers": [
    {
      "source": "/dailyslop.mp4",
      "headers": [
        { "key": "Content-Type", "value": "video/mp4" }
      ]
    }
  ],
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    { 
     "src": "app/**/*.js",
     "use": "@vercel/node" 
    }
  ]
}